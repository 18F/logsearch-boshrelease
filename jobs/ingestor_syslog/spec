packages: 
  - logstash
  - jre
templates:
  bin/ingestor_syslog_ctl: bin/ingestor_syslog_ctl
  bin/monit_debugger: bin/monit_debugger
  data/properties.sh.erb: data/properties.sh
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
