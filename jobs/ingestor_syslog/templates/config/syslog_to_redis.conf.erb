input {
	syslog {
		add_field => [ "type", "syslog" ]
		host => "0.0.0.0"
		port => "<%= p("ingestor.syslog.endpoint_port") %>"
	}
}

output {
	<% if_p("ingestor.syslog.debug") do %>
	stdout { debug => true debug_format => "json"}
	<% end %>
	
	redis {
		host => "<%= p("ingestor.syslog.queue_endpoint")  %>"
		data_type => "list"
		key => "<%= p("ingestor.syslog.queue_name")  %>"
		batch => true
		batch_events => 50
	}
}
