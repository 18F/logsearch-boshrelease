input {
	tcp {
		add_field => [ "type", "syslog" ]
		host => "0.0.0.0"
		port => "<%= p("logstash_ingestor.syslog.port") %>"
	}
	udp {
		add_field => [ "type", "syslog" ]
		host => "0.0.0.0"
		port => "<%= p("logstash_ingestor.syslog.port") %>"
	}
}

output {
	<% if_p("logstash_ingestor.debug") do %>
	stdout { debug => true codec => "json"}
	<% end %>
	
	redis {
		host => "<%= p("redis.host") %>"
		port => "<%= p("redis.port") %>"
		data_type => "list"
		key => "<%= p("redis.key") %>"
		batch => true
		batch_events => 50
	}
}
