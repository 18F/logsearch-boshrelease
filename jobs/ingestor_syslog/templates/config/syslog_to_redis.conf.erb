input {
	syslog {
		add_field => [ "type", "syslog" ]
		host => "0.0.0.0"
		port => "<%= p("ingestor.syslog.endpoint.port") %>"
	}
}

output {
	<% if_p("ingestor.syslog.debug") do %>
	stdout { debug => true codec => "json"}
	<% end %>
	
	redis {
		host => "<%= p("queue.endpoint.host") %>:<%= p("queue.endpoint.port") %>"
		data_type => "list"
		key => "<%= p("queue.name") %>"
		batch => true
		batch_events => 50
	}
}
