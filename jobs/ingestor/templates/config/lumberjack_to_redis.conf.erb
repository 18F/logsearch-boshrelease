input {
	lumberjack {
		add_field => [ "_logstash_input", "lumberjack" ]
		host => "0.0.0.0"
		port => "<%= p("ingestor.endpoint.lumberjack_port") %>"
		ssl_certificate => "/var/vcap/jobs/ingestor/config/lumberjack.crt"
		ssl_key => "/var/vcap/jobs/ingestor/config/lumberjack.key"
	}
}

filter {
	if [_logstash_input] == "lumberjack" {
		mutate {
			add_field => [ "@source.host", "%{host}" ]
			add_field => [ "@source.path", "%{file}" ]
			add_field => [ "@source.offset", "%{offset}" ]
			remove_field => [ "host", "file", "offset", "_logstash_input" ]
		}
	}
}
				
output {
	<% if_p("ingestor.debug") do %>
	stdout { debug => true debug_format => "json"}
	<% end %>

	redis {
		host => "<%= p("ingestor.queue_endpoint")  %>"
		data_type => "list"
		key => "<%= p("ingestor.queue_name")  %>"
		batch => true
		batch_events => 50
	}
}
