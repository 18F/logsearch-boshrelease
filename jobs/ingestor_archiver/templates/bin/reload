#!/bin/bash

# usage: cat | /var/vcap/jobs/archiver_restorer/bin/reload [stdin-file-extension]

set -e
set -x


#
# step 1
#

echo -n 'Stopping logstash...'

/var/vcap/bosh/bin/monit stop archiver_restorer

while /var/vcap/bosh/bin/monit summary | grep archiver_restorer | grep running > /dev/null 2>&1 ; do
  echo -n "."
  sleep 1
done

echo 'done'


#
# step 2
#

echo -n 'Purging existing logs, state...'

rm -fr "<%= p('archiver_restorer.data_dir') %>/restore/*"
rm "<%= p('archiver_restorer.data_dir') %>/logstash.sincedb"

echo 'done'


#
# step 3
#

cd "<%= p('archiver_restorer.data_dir') %>/restore"

echo -n 'Transferring logs...'

cat > "_reload.$1"

echo 'done'


#
# step 4
#

echo -n 'Extracting logs...'

EXTRACTED=true

while [[ "true" == "$EXTRACTED" ]] ; do
  EXTRACTED=false

  for FILE in $( find . -name ".tgz" ) ; do
    tar -xzf "$FILE"
    rm "$FILE"

    echo -n '.'
    EXTRACTED=true
  done

  for FILE in $( find . -name ".tar" ) ; do
    tar -zf "$FILE"
    rm "$FILE"

    echo -n '.'
    EXTRACTED=true
  done

  for FILE in $( find . -name ".xz" ) ; do
    xz -d "$FILE"

    echo -n '.'
    EXTRACTED=true
  done
done

echo 'done'


#
# step 5
#

echo -n 'Starting logstash...'
/var/vcap/bosh/bin/monit start archiver_restorer

while ! /var/vcap/bosh/bin/monit summary | grep archiver_restorer | grep running > /dev/null 2>&1 ; do
  echo -n "."
  sleep 1
done

echo 'done'
