input {
	relp {
		add_field => [ "_logstash_input", "relp" ]
		host => "0.0.0.0"
		port => "<%= p("logstash.input.relp.port") %>"
		<% if_p("logstash.debug") do %>
		debug => true
		<% end %>
	}
}
			
output {
	<% if_p("logstash.debug") do %>
	stdout { debug => true codec => "json"}
	<% end %>

	redis {
		host => "<%= p("logstash.queue.redis.host") %>:<%= p("logstash.queue.redis.port") %>"
		data_type => "list"
		key => "<%= p("logstash.queue.redis.key") %>"
		batch => true
		batch_events => 50
	}
}
