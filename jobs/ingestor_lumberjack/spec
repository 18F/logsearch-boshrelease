---
name: ingestor_lumberjack
packages: 
  - logstash
  - java7
templates:
  bin/ingestor_lumberjack_ctl: bin/ingestor_lumberjack_ctl
  bin/monit_debugger: bin/monit_debugger
  data/properties.sh.erb: data/properties.sh
  helpers/ctl_setup.sh: helpers/ctl_setup.sh
  helpers/ctl_utils.sh: helpers/ctl_utils.sh
  config/lumberjack_to_redis.conf.erb: config/lumberjack_to_redis.conf
  config/lumberjack.crt.erb: config/lumberjack.crt
  config/lumberjack.key.erb: config/lumberjack.key
properties:
  logstash.input.lumberjack.port: 
    description: Port to listen for lumberjack messages
    default: 5043
  logstash.input.lumberjack.ssl_certificate:
    description: Lumberjack SSL certificate (file contents, not a path)
  logstash.input.lumberjack.ssl_key:
    description: Lumberjack SSL key (file contents, not a path)
  logstash.output.elasticsearch.host:
    description: IP / DNS of elasticsearch http endpoint
  logstash.output.elasticsearch.port:
    description: Port of elasticsearch http endpoint
    default: 9200
  logstash.output.elasticsearch.flush_size:
    description: Redis queue flush size
    default: 100
  logstash.queue.redis.host: 
    description: Redis host of queue
  logstash.queue.redis.port: 
    description: Redis port of queue
    default: 6379
  logstash.queue.redis.key: 
    description: Name of queue to pull messages from
    default: logstash
